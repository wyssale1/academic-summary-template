// ============================================
// Typography Configuration
// ============================================

#let main-font = "Roboto"
#let main-font-size = 10pt
#let main-language = "de"

// Text sizes
#let text-size-xs = 8pt
#let text-size-sm = 9pt
#let text-size-base = 10pt
#let text-size-lg = 11pt
#let text-size-xl = 12pt
#let text-size-2xl = 13pt
#let text-size-3xl = 16pt
#let text-size-4xl = 24pt

// Paragraph settings
#let paragraph-leading = 0.8em
#let paragraph-spacing = 1.2em

// List settings
#let list-indent = 1em
#let list-spacing = 1.2em
